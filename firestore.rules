rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to public data (challenges, leaderboard)
    match /artifacts/{appId}/public/data/{document=**} {
      allow read: if true;  // Anyone can read challenges and leaderboard
      allow write: if false; // No one can write to public data
    }
    
    // Allow authenticated users to update their own public profile
    match /artifacts/{appId}/public/data/users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User-specific data - users can only access their own data
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
